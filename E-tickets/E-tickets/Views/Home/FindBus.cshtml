                    <th>FARE(TK)</th>
                    <th>COACH TYPE</th>
                    <th>END COUNTER</th>
                    <th> VIEW</th>
                </tr>

                @for (int i = 0; i < ViewBag.ResultTable.Rows.Count; i++)
                {
                    <tr class="viewseat">
                        <td>@ViewBag.ResultTable.Rows[i]["bname"].ToString()</td>
                        <td>@ViewBag.ResultTable.Rows[i]["departure_time"].ToString()</td>
                        <td>@ViewBag.ResultTable.Rows[i]["from_location"].ToString()</td>
                        <td>@ViewBag.ResultTable.Rows[i]["fare"].ToString()</td>
                        <td>@ViewBag.ResultTable.Rows[i]["btype"].ToString()</td>
                        <td>@ViewBag.ResultTable.Rows[i]["to_location"].ToString()</td>
