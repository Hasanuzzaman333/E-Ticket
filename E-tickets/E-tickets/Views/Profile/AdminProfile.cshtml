
@{
    ViewBag.Title = "AdminProfile";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <style>
        body {
            background-color: #F3FAB6;
        }

        .navbar {
            background-color: #CBE32D;
        }
    </style>

</head>

<body>
    <h2>Profile</h2>
@{
    if (Session["pid"] != null && Convert.ToInt32(Session["ptype"]) == 2)
    {
    
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-0">
                <form>
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" name="name" value="@Session["name"]" class="form-control" id="name">
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="text" name="email" value="@Session["email"]" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="phone_no">Phone no:</label>
                        <input type="text" name="phone_no" value="@Session["phone_no"]" class="form-control" id="phone_no">
                    </div>

                    <button type="submit" class="btn btn-default">Update</button>
                </form>
            </div>
            <div class="col-sm-6 col-sm-offset-1">
                <nav class="navbar navbar-default ">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="myNavbar">
                            <ul class="nav navbar-nav navbar-center">
                                <li><a href="/buses/Index">Buses</a></li>
                                <li><a href="/Route/Index">Routes</a></li>
                                <li><a href="/Schedule/Index">Schedule</a></li>
                                <li><a href="/Reserve/Index">Reserves</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>                        
        </div>
    </div>
    }
}
</body>
</html>

